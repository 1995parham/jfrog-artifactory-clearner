# JFrog Artifactory Configuration
[jfrog]
url = "https://your-company.jfrog.io/artifactory"
username = "your-username"
password = "your-password-or-api-token"

# List of repositories to clean (can be one or many)
repositories = ["docker-local", "docker-prod", "docker-dev"]

# Optional: Only process these specific images (if not set, all images are processed)
# include_images = ["myapp", "backend-service"]

# Optional: Exclude these images from processing (if not set, no images are excluded)
# exclude_images = ["production-critical", "do-not-delete"]

# Cleanup Configuration
[cleanup]
# Delete images older than this many days
days_old = 30

# Always keep at least this many recent tags per image
keep_minimum = 3

# Set to false to actually delete images (true = preview only)
dry_run = true
